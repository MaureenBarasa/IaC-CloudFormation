AWSTemplateFormatVersion: "2010-09-09"
Description: "Template to create SNS Topic and Subscriptions"
Parameters:
    Name:
        Type: String
        Description: The Topic Name
        Default: EKS_CLUSTER_MEMORY_MORE_THAN_70

Resources:
    Email1Notification:
        Type: AWS::SNS::Subscription
        Properties:
           Endpoint: maureen.barasa.mb@gmail.com
           Protocol: email
           TopicArn: !Ref ScaleUpTopic

    Email2Notification:
        Type: AWS::SNS::Subscription
        Properties:
           Endpoint: test-blog@gmail.com
           Protocol: email
           TopicArn: !Ref ScaleUpTopic

    ScaleUpTopic:   
        Type: AWS::SNS::Topic
        Properties: 
           Tags: 
              - Key: Name
                Value: EKS_CLUSTER_MEMORY_MORE_THAN_70
              - Key: createdBy
                Value: Maureen Barasa
              - Key: Project
                Value: test-blog
           TopicName: EKS_CLUSTER_MEMORY_MORE_THAN_70

Outputs:
    ScaleUp:
        Description: The scale up topic
        Value: !Ref ScaleUpTopic
        Export:
          Name: "EKSScaleUp"
          Value: !Ref ScaleUpTopic

